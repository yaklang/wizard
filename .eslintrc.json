{
  "root": true,
  "parserOptions": {
    "project": [
      "./tsconfig.json",
      "./tsconfig.node.json",
      "./uno.config.ts",
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "alias": [
        [
          "@",
          "./src"
        ]
      ]
    }
  },
  "extends": [
    "alloy",
    "alloy/react",
    "alloy/typescript",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true
  },
  "globals": {},
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }],
    "react/react-in-jsx-scope": "off", // For React 17+
    "semi": "off",
    "comma-dangle": "off"
  },
  "ignorePatterns": [
    "dist",
    "node_modules"
  ]
}
